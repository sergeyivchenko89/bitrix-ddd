<?xml version="1.0" encoding="UTF-8"?>
<config>
    <!-- Общие настройки мастера установки -->
    <DEFAULT_LANGUAGE>ru</DEFAULT_LANGUAGE> <!-- Язык установки по умолчанию -->
    <pgsql>yes</pgsql> <!-- Использовать PostgreSQL (yes/no) -->
    <utf8>yes</utf8> <!-- Использовать кодировку UTF-8 (yes/no) -->

	<db_type>postgresql</db_type> <!-- Тип базы данных (mysql, postgresql) -->
    <db_host>localhost</db_host> <!-- Хост базы данных -->
    <db_name>sitemanager_db</db_name> <!-- Имя базы данных -->
    <db_login>bitrix_user</db_login> <!-- Логин пользователя БД -->
    <db_password>secret_password</db_password> <!-- Пароль пользователя БД -->
    <db_create>Y</db_create> <!-- Создать базу данных, если не существует (Y/N) -->

    <admin_login>admin</admin_login> <!-- Логин администратора сайта -->
    <admin_password>admin_pass</admin_password> <!-- Пароль администратора сайта -->
    <admin_name>Иван</admin_name> <!-- Имя администратора -->
    <admin_surname>Иванов</admin_surname> <!-- Фамилия администратора -->
    <admin_email>admin@example.com</admin_email> <!-- Email администратора -->
	
    <site_name>Мой Сайт</site_name> <!-- Название сайта -->
    <site_server_name>www.mysite.com</site_server_name> <!-- URL сайта -->
    <license_key>DEMO</license_key> <!-- Лицензионный ключ (или DEMO) -->
    <create_user>Y</create_user> <!-- Создать пользователя-администратора (Y/N) -->
    <email_from>noreply@mysite.com</email_from> <!-- Email адрес отправителя по умолчанию -->
    <server_response_time>30</server_response_time> <!-- Время ответа сервера -->
    <demoWizardName>bitrix:corp_services</demoWizardName> <!-- Имя мастера демо-данных для запуска -->
</config>